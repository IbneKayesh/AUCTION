@model auction.Models.V_USER_PASS_CHANGE
@{
    ViewBag.Title = "Change Your Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />

<div class="panel panel-primary">
    <div class="panel-heading">
        Change Password
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-4">
                <div class="form-horizontal">
                    <div class="form-group input-group">
                        @Html.Label("USER_PASS","Old Password", htmlAttributes: new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.USER_PASS, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.USER_PASS, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group input-group">
                        @Html.Label("NEW_PASS", "New Password", htmlAttributes: new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.NEW_PASS, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        <strong>Minimum password length is 5 char</strong>
                        @Html.ValidationMessageFor(model => model.NEW_PASS, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group input-group">
                        @Html.Label("CONF_PASS", "Confirm Password", htmlAttributes: new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.CONF_PASS, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.CONF_PASS, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group btn-group">
                        <input type="submit" value="Change Password" class="btn btn-sm btn-primary" />
                        <a href="@Url.Action("Index","Home")" class="btn btn-warning btn-sm">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {

}
